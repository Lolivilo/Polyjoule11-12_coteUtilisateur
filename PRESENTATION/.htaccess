#--------------------------------------------------
# Le serveur doit suivre les liens symboliques :
#--------------------------------------------------
Options +FollowSymlinks

#--------------------------------------------------
# Activation du module de réécriture URL :
#--------------------------------------------------
RewriteEngine on



#--------------------------------------------------
#Redirection liste articles
#--------------------------------------------------
RewriteRule ^rubrique-([0-9]+)-([0-9]+)$   /homez.501/polyjoul/www/site/PRESENTATION/listearticle.php?cat=$1&numPage=$2 [L]
RewriteRule ^rubrique-([0-9]+)$   /homez.501/polyjoul/www/site/PRESENTATION/listearticle.php?cat=$1&numPage=1 [L]

#--------------------------------------------------
#Redirection article
#--------------------------------------------------
RewriteRule ^article-([0-9]+)$   /homez.501/polyjoul/www/site/PRESENTATION/article.php?article=$1 [L]



#--------------------------------------------------
#Redirection album photos
#--------------------------------------------------
RewriteRule ^albums-([0-9]+)$   /homez.501/polyjoul/www/site/PRESENTATION/listealbums.php?cat=11&numPage=$1 [L]
RewriteRule ^albums$   /homez.501/polyjoul/www/site/PRESENTATION/listealbums.php?cat=11&numPage=1 [L]


#--------------------------------------------------
#Redirection livre or
#--------------------------------------------------
RewriteRule ^livreor-([0-9]+)$   /homez.501/polyjoul/www/site/PRESENTATION/livredor.php?cat=10&numPage=$1 [L]
RewriteRule ^livreor$   /homez.501/polyjoul/www/site/PRESENTATION/livredor.php?cat=10&numPage=1 [L]


#--------------------------------------------------
#Redirection personnages clé
#--------------------------------------------------
RewriteRule ^personnages-([0-9]+)$   /homez.501/polyjoul/www/site/PRESENTATION/personne.php?cat=12&numPage=$1 [L]
RewriteRule ^personnages$   /homez.501/polyjoul/www/site/PRESENTATION/personne.php?cat=12&numPage=1 [L]


#--------------------------------------------------
#Redirection historique / liste equipe
#--------------------------------------------------
RewriteRule ^historique-([0-9]+)$   /homez.501/polyjoul/www/site/PRESENTATION/listeequipes.php?cat=14&numPage=$1 [L]
RewriteRule ^historique$   /homez.501/polyjoul/www/site/PRESENTATION/listeequipes.php?cat=14&numPage=1 [L]


#--------------------------------------------------
#Redirection erreur
#--------------------------------------------------
RewriteRule ^erreur-([0-9])$   /homez.501/polyjoul/www/site/PRESENTATION/erreur.php?code=$1 [L]

#--------------------------------------------------
#Redirection index
#--------------------------------------------------
RewriteRule ^home$   /homez.501/polyjoul/www/site/PRESENTATION/index.php [L]


#--------------------------------------------------
#Redirection recherche
#--------------------------------------------------
RewriteRule ^recherche=(.*?)$   /homez.501/polyjoul/www/site/PRESENTATION/search.php?w=$1 [L]







